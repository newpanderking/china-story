<div class="span4 offset3">
  <h2 class="form-signin-heading">注册</h2>
  <% unless devise_error_messages!.blank? %>
    <div class="alert alert-block alert-error fade in">
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.text_field :user_name, :class => 'input-block-level',
      :placeholder => '用户名'
    %>
    <%= f.text_field :email, :class => 'input-block-level',
      :placeholder => '电子邮箱'
    %>
    <%= f.password_field :password, :class => 'input-block-level',
      :placeholder => '密码'
    %>
    <%= f.password_field :password_confirmation, :class => 'input-block-level',
      :placeholder => '密码确认'
    %>
    <div><%= f.submit "提交注册信息", :class => 'btn btn-primary' %></div>
  <% end %>
</div>
