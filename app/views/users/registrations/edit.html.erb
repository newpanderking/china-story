<div class="span4 offset3">
  <h2 class="form-signin-heading">个人资料</h2>
  <%= alert_message devise_error_messages! %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
    <%= f.text_field :user_name, :class => 'input-block-level',
      :placeholder => '用户名', :readonly => 'readonly'
    %>
    <%= f.text_field :email, :class => 'input-block-level',
      :placeholder => '电子邮箱'
    %>
    <%= f.password_field :password, :class => 'input-block-level',
      :placeholder => '新密码'
    %>
    <%= f.password_field :password_confirmation, :class => 'input-block-level',
      :placeholder => '新密码确认'
    %>
    <%= f.password_field :current_password, :class => 'input-block-level',
      :placeholder => '当前密码'
    %>
    <div><%= f.submit "更新", :class => 'btn btn-primary' %></div>
  <% end %>
</div>
