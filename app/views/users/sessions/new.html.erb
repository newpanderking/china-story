<%= content_for :head do %>
  <%= stylesheet_link_tag 'users/sign_in', :media => 'all' %>
<% end %>
<div class="span4 offset3">
  <h2 class="form-signin-heading">登录</h2>
  <%= alert_message flash[:alert] %>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.text_field :user_name, :class => 'input-block-level',
      :placeholder => '用户名'
    %>
    <%= f.password_field :password, :class => 'input-block-level',
      :placeholder => '密码'
    %>
    <%= f.check_box :remember_me, :class => 'remember_me' %>
    <%= f.label :remember_me, '记住登录状态' %>
    <%= link_to '忘记密码？', new_password_path(resource_name),
      :class => 'forget_password'
    %>
    <div><%= f.submit "登录", :class => 'btn btn-primary' %></div>
  <% end %>
</div>
