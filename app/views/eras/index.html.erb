<%= content_for :head do %>
  <%= stylesheet_link_tag 'eras', :media => 'all' %>
<% end %>
<div class="span10 offset1">
  <h2 class="offset3">中国历代纪元表</h2>
  <table class="eras_list table table-bordered">
    <thead>
      <tr>
        <th>朝代</th>
        <th>起止时间（公元）</th>
        <th>说明</th>
      </tr>
    </thead>
    <tbody>
      <%=
        eras.map do |era|
          html =<<-HTML
            <tr>
              <td class="#{era['belongs'].blank? ? '' : 'sub'}">
                #{era['title']}
              </td>
              <td>#{era['range']}</td>
              <td>#{era['extra']}</td>
            </tr>
          HTML
        end.join.html_safe
      %>
    </tbody>
  </table>
</div>
